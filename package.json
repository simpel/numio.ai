{
  "name": "@numio/ai",
  "private": true,
  "scripts": {
    "prebuild": "pnpm db:generate",
    "build": "turbo run build",
    "predev": "pnpm db:generate",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier \"**/*.{ts,tsx,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "changeset:create": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --since=main",
    "changeset:version": "changeset version",
    "db:generate": "pnpm --filter @numio/ai-database run generate",
    "db:reset": "pnpm --filter @numio/ai-database run reset",
    "db:migrate": "pnpm --filter @numio/ai-database run migrate",
    "db:migrate:deploy": "pnpm --filter @numio/ai-database run migrate:deploy",
    "db:studio": "pnpm --filter @numio/ai-database run studio",
    "db:seed": "pnpm --filter @numio/ai-database run seed",
    "envs:dev": "turbo run envs:dev",
    "envs:prod": "turbo run envs:prod",
    "clean": "npx rimraf --glob \"**/node_modules\" \"**/pnpm-lock.yaml\" \"**/dist\" \"**/.next\"",
    "quality:deps": "depcruise apps/web/src --include-only \"^apps/web/src\" --output-type text",
    "quality:deps:graph": "depcruise apps/web/src --include-only \"^apps/web/src\" --output-type dot",
    "quality:deps:validate": "depcruise apps/web/src --config .dependency-cruiser.js",
    "quality:unused": "knip --reporter json --no-exit-code",
    "quality:unused:text": "knip --reporter compact --no-exit-code",
    "quality:complexity": "labinsight analyze --type deep --format json --silent --ignore \"**/node_modules/**,**/dist/**,**/.next/**,**/.turbo/**,**/build/**,**/.DS_Store\"",
    "quality:complexity:text": "labinsight analyze --type deep --format text --silent --ignore \"**/node_modules/**,**/dist/**,**/.next/**,**/.turbo/**,**/build/**,**/.DS_Store\"",
    "quality:duplication": "jscpd . --reporters json --ignore \"**/node_modules/**,**/dist/**,**/.next/**,**/.turbo/**,**/build/**\"",
    "quality:duplication:text": "jscpd . --reporters text --ignore \"**/node_modules/**,**/dist/**,**/.next/**,**/.turbo/**,**/build/**\"",
    "quality:format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "quality:all": "pnpm run quality:deps && pnpm run quality:unused && pnpm run quality:complexity && pnpm run quality:duplication && pnpm run quality:format"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@techfever/labinsight": "^0.1.8",
    "@types/node": "^20.19.1",
    "dependency-cruiser": "^17.0.1",
    "jscpd": "^4.0.5",
    "knip": "^5.62.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "prettier-plugin-tailwindcss": "^0.6.13"
  }
}