return (
  <div className="mb-8">
    <h1 className="text-3xl font-bold tracking-tight">{t('title')}</h1>
    <p className="text-muted-foreground mb-6">
      {t('settings_description')}
    </p>
  </div>
);
```

### ❌ Bad Examples

```typescript
// Hardcoded text - DON'T DO THIS
return (
  <div className="mb-8">
