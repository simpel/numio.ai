{
  "extends": "@numio/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@app/*": [
        "./app/*"
      ],
      "@shadcn/*": [
        "./shadcn/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    "./next-auth.d.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}