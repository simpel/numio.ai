{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "NODE_ENV",
        "AZURE_API_KEY",
        "AUTH_MICROSOFT_ENTRA_ID_ID",
        "AUTH_MICROSOFT_ENTRA_ID_SECRET",
        "AUTH_MICROSOFT_ENTRA_ID_ISSUER",
        "TAVILY_API_KEY",
        "AZURE_API_VERSION",
        "API_PORT"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "env": [
        "NODE_ENV",
        "AZURE_API_KEY",
        "AUTH_MICROSOFT_ENTRA_ID_ID",
        "AUTH_MICROSOFT_ENTRA_ID_SECRET",
        "AUTH_MICROSOFT_ENTRA_ID_ISSUER",
        "TAVILY_API_KEY",
        "AZURE_API_VERSION",
        "API_PORT"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^typecheck"
      ],
      "env": [
        "NODE_ENV",
        "AZURE_API_KEY",
        "AUTH_MICROSOFT_ENTRA_ID_ID",
        "AUTH_MICROSOFT_ENTRA_ID_SECRET",
        "AUTH_MICROSOFT_ENTRA_ID_ISSUER",
        "TAVILY_API_KEY",
        "AZURE_API_VERSION",
        "API_PORT"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "AZURE_API_KEY",
        "AUTH_MICROSOFT_ENTRA_ID_ID",
        "AUTH_MICROSOFT_ENTRA_ID_SECRET",
        "AUTH_MICROSOFT_ENTRA_ID_ISSUER",
        "TAVILY_API_KEY",
        "AZURE_API_VERSION",
        "API_PORT"
      ]
    },
    "generate": {
      "dependsOn": [
        "^generate"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "prisma/schema.prisma"
      ],
      "env": [
        "DATABASE_URL"
      ]
    },
    "migrate": {
      "cache": false,
      "persistent": false,
      "env": [
        "DATABASE_URL"
      ]
    },
    "migrate:deploy": {
      "cache": false,
      "persistent": false,
      "env": [
        "DATABASE_URL"
      ]
    },
    "studio": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL"
      ]
    },
    "envs:dev": {
      "persistent": false
    },
    "envs:prod": {
      "persistent": false
    }
  }
}