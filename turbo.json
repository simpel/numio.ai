{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "supabase:start": {
      "cache": false,
      "persistent": true
    },
    "supabase:stop": {
      "cache": false
    },
    "start": {
      "dependsOn": [
        "supabase:start"
      ],
      "cache": false,
      "persistent": true
    },
    "stop": {
      "dependsOn": [
        "supabase:stop"
      ],
      "cache": false
    }
  }
}